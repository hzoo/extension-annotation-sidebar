{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["bun-types"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}