{
  "name": "extension-annotation-sidebar",
  "description": "see annotations on your current page",
  "private": true,
  "version": "0.0.10",
  "type": "module",
  "scripts": {
    "site": "vite --config site/vite.config.ts",
    "notes": "vite --config note-site/vite.config.ts",
    "build:note": "vite build --config site/vite.config.ts",
    "dev": "wxt",
    "dev:ff": "wxt -b firefox",
    "build": "wxt build",
    "build:ff": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:ff": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "release": "bun scripts/release.ts",
    "deploy:demo": "vite build --config site/vite.config.ts && bunx wrangler pages deploy site/dist --project-name=annotation-sidebar-demo",
    "deploy:notes": "vite build --config note-site/vite.config.ts && bunx wrangler pages deploy note-site/dist --project-name=henry-note-reader",
    "deploy:bsky_worker": "bunx wrangler deploy -c wrangler.toml",
    "deploy:jina_worker": "bunx wrangler deploy -c wrangler.jina-proxy.toml"
  },
  "dependencies": {
    "@atcute/atproto": "^3.0.0",
    "@atcute/bluesky": "^3.0.0",
    "@atcute/bluesky-richtext-segmenter": "^2.0.1",
    "@atcute/client": "^4.0.0",
    "@atcute/lexicons": "^1.0.0",
    "@atcute/oauth-browser-client": "^1.0.19",
    "@preact/signals": "^2.0.4",
    "@preact/signals-react": "^3.0.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.7",
    "@tanstack/query-persist-client-core": "^5.76.1",
    "@tanstack/query-sync-storage-persister": "^5.76.1",
    "@tanstack/react-query": "^5.76.1",
    "@tanstack/react-query-persist-client": "^5.76.1",
    "dompurify": "^3.2.6",
    "marked": "^15.0.12",
    "preact": "^10.26.6",
    "preact-iso": "^2.9.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.1",
    "@types/bun": "^1.2.13",
    "@types/chrome": "^0.0.322",
    "typescript": "^5.8.3",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.3.0",
    "wxt": "^0.20.6"
  }
}